void アイＡ_買う()
{
	字速変更(0);
	'(Money: ' N(所持金(), 0, 0);
	', Seirogan: ' N(世色癌, 0, 0);
	')' B;
	字速変更(1);
	選択肢登録(1, "Weapons", -1, 0);
	選択肢登録(2, "Armor", -1, 0);
	選択肢登録(3, "Return Wood", -1, 0);
	選択肢登録(4, "Items", -1, 0);
	if (▲にんじんの鍵の話 == 2)
	{
		選択肢登録(5, "Evaporation Fruit", -1, 0);
	}
	選択肢登録(6, "Seirogan", -1, 0);
	選択肢登録(7, "Back", 0, 0);
	int sel = 選択実行(1, 0);
	if (sel == 1)
	{
		アイ共通_買う武器();
	}
	if (sel == 2)
	{
		アイ共通_買う鎧();
	}
	if (sel == 3)
	{
		アイ共通_買う帰り木();
	}
	if (sel == 4)
	{
		アイ共通_買うアイテム();
	}
	if (sel == 5)
	{
		▲にんじんの鍵の話 = 3;
		Ｍ１／買う蒸発の実();
	}
	if (sel == 6)
	{
		アイ共通_買う世色癌();
	}
	return;
}
